<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Library of Thoughts</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .sealed-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, rgba(107, 78, 113, 0.96), rgba(74, 68, 88, 0.96));
      backdrop-filter: blur(12px);
      border-radius: 0.75rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
      z-index: 10;
      border: 2px solid rgba(155, 126, 74, 0.5);
    }

    .sealed-overlay:hover {
      background: linear-gradient(135deg, rgba(107, 78, 113, 0.98), rgba(74, 68, 88, 0.98));
      transform: scale(1.02);
      border-color: rgba(155, 126, 74, 0.8);
      box-shadow: 0 8px 24px rgba(107, 78, 113, 0.4);
    }

    .sealed-icon {
      width: 80px;
      height: 80px;
      margin-bottom: 1rem;
      opacity: 0.9;
      filter: drop-shadow(0 0 8px rgba(168, 139, 92, 0.5));
    }

    .sealed-text {
      font-size: 1.5rem;
      font-weight: 700;
      color: #A88B5C;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
      margin-bottom: 0.5rem;
      letter-spacing: 0.1em;
    }

    .sealed-hint {
      font-size: 0.875rem;
      color: rgba(229, 229, 234, 0.7);
      text-align: center;
      margin-top: 0.25rem;
    }

    .knowledge-card {
      position: relative;
      overflow: hidden;
    }

    .knowledge-card.sealed .card-content {
      filter: blur(4px);
      pointer-events: none;
    }

    .unsealed .sealed-overlay {
      opacity: 0;
      pointer-events: none;
    }
  </style>
</head>
<body class="bg-neutral-900 text-neutral-100">
  <%- include('../partials/header') %>
  
  <main class="min-h-screen py-12">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold">Admin Dashboard</h1>
        <a href="/admin/users" class="btn-primary">Manage Users</a>
      </div>

      <div class="grid md:grid-cols-3 gap-6 mb-12">
        <div class="card">
          <h3 class="text-lg font-semibold text-neutral-400 mb-2">Available Knowledge</h3>
          <p class="text-4xl font-bold text-primary"><%= items.length %></p>
        </div>
        <div class="card">
          <h3 class="text-lg font-semibold text-neutral-400 mb-2">Public Knowledge</h3>
          <p class="text-4xl font-bold text-success"><%= items.filter(k => !k.isRestricted).length %></p>
        </div>
        <div class="card">
          <h3 class="text-lg font-semibold text-neutral-400 mb-2">Protected Knowledge</h3>
          <p class="text-4xl font-bold text-warning"><%= items.filter(k => k.isRestricted).length %></p>
        </div>
      </div>

      <h2 class="text-2xl font-bold mb-6">Available Knowledge</h2>

      <% if (items.length === 0) { %>
        <div class="card text-center py-12">
          <p class="text-neutral-400 text-lg">No available knowledge yet.</p>
        </div>
      <% } else { %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% items.forEach(item => { %>
            <div class="knowledge-card card hover-lift <%= item.isRestricted ? 'sealed border-2 border-warning/30' : '' %>" data-id="<%= item.id %>">
              <% if (item.isRestricted) { %>
                <div class="sealed-overlay" data-action="unseal-card">
                  <svg class="sealed-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="#A88B5C" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M2 17L12 22L22 17" stroke="#A88B5C" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M2 12L12 17L22 12" stroke="#A88B5C" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <circle cx="12" cy="12" r="3" fill="#A88B5C" opacity="0.8"/>
                  </svg>
                  <div style="background: rgba(155, 126, 74, 0.2); border: 1px solid #A88B5C; padding: 0.25rem 1rem; border-radius: 0.25rem; margin-bottom: 0.75rem; font-size: 0.75rem; color: #A88B5C; letter-spacing: 0.15em;">
                    ‚ö†Ô∏è HIGHLY SENSITIVE
                  </div>
                  <div class="sealed-text">üîí SEALED</div>
                  <div class="sealed-hint">Click to unseal protected knowledge</div>
                </div>
              <% } %>
              
              <div class="card-content">
                <img 
                  src="/images/<%= item.image %>" 
                  alt="<%= item.title %>"
                  class="w-full h-48 object-cover rounded-xl mb-4"
                >
                <% if (item.tags && item.tags.categories && item.tags.categories.length > 0) { %>
                  <div class="mb-3 flex flex-wrap gap-2">
                    <% item.tags.categories.forEach(cat => { %>
                      <span class="badge badge-<%= cat %>"><%= cat %></span>
                    <% }); %>
                    <% if (item.tags.difficulty && (item.tags.categories.includes('spell') || item.tags.categories.includes('jutsu'))) { %>
                      <span class="badge" style="background: rgba(139, 122, 168, 0.15); color: var(--shinju-glow); border: 1px solid var(--shinju-glow); font-size: 0.65rem;">
                        <%= item.tags.difficulty %>
                      </span>
                    <% } %>
                    <% if (item.tags.element && item.tags.categories.includes('jutsu')) { %>
                      <span class="badge" style="background: rgba(168, 139, 92, 0.15); color: var(--shrine-gold); border: 1px solid var(--shrine-gold); font-size: 0.65rem;">
                        <%= item.tags.element %>
                      </span>
                    <% } %>
                    <% if (item.isRestricted) { %>
                      <span class="badge badge-pending">
                        PROTECTED
                      </span>
                    <% } %>
                  </div>
                <% } %>
                <h3 class="text-xl font-bold mb-2"><%= item.title %></h3>
                <p class="text-neutral-400 mb-4 line-clamp-3"><%= item.description %></p>
                <a href="/admin/knowledge/<%= item.id %>" class="btn-secondary w-full text-center">
                  View Details
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </main>



  <script src="/js/admin.js"></script>
</body>
</html>
