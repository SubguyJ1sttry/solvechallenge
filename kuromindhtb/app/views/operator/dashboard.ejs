<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Operator Dashboard - Library of Thoughts</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-neutral-900 text-neutral-100">
  <%- include('../partials/header') %>
  
  <main class="min-h-screen py-12">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold">Operator Dashboard</h1>
        <a href="/operator/users" class="btn-primary">Manage Users</a>
      </div>

      <div class="grid md:grid-cols-3 gap-6 mb-12">
        <div class="card">
          <h3 class="text-lg font-semibold text-neutral-400 mb-2">Pending Reviews</h3>
          <p class="text-4xl font-bold text-warning"><%= pendingItems.length %></p>
        </div>
        <div class="card">
          <h3 class="text-lg font-semibold text-neutral-400 mb-2">Reviews Completed</h3>
          <p class="text-4xl font-bold text-success"><%= history.length %></p>
        </div>
        <div class="card">
          <h3 class="text-lg font-semibold text-neutral-400 mb-2">Approval Rate</h3>
          <p class="text-4xl font-bold text-primary">
            <%= history.length > 0 ? Math.round((history.filter(h => h.action === 'approved').length / history.length) * 100) : 0 %>%
          </p>
        </div>
      </div>

      <h2 class="text-2xl font-bold mb-6">Pending Submissions</h2>

      <% if (pendingItems.length === 0) { %>
        <div class="card text-center py-12">
          <p class="text-neutral-400 text-lg">No pending submissions to review.</p>
        </div>
      <% } else { %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% pendingItems.forEach(item => { %>
            <div class="card hover-lift">
              <img 
                src="/images/<%= item.image %>" 
                alt="<%= item.title %>"
                class="w-full h-48 object-cover rounded-xl mb-4"
              >
              <% if (item.tags && item.tags.categories && item.tags.categories.length > 0) { %>
                <div class="mb-3 flex flex-wrap gap-2">
                  <% item.tags.categories.forEach(cat => { %>
                    <span class="badge badge-<%= cat %>"><%= cat %></span>
                  <% }); %>
                  <% if (item.tags.difficulty && (item.tags.categories.includes('spell') || item.tags.categories.includes('jutsu'))) { %>
                    <span class="badge" style="background: rgba(139, 122, 168, 0.15); color: var(--shinju-glow); border: 1px solid var(--shinju-glow); font-size: 0.65rem;">
                      <%= item.tags.difficulty %>
                    </span>
                  <% } %>
                  <% if (item.tags.element && item.tags.categories.includes('jutsu')) { %>
                    <span class="badge" style="background: rgba(168, 139, 92, 0.15); color: var(--shrine-gold); border: 1px solid var(--shrine-gold); font-size: 0.65rem;">
                      <%= item.tags.element %>
                    </span>
                  <% } %>
                </div>
              <% } %>
              <h3 class="text-xl font-bold mb-2"><%= item.title %></h3>
              <p class="text-neutral-400 mb-4 line-clamp-3"><%= item.description %></p>
              <a href="/operator/review/<%= item.id %>" class="btn-primary w-full text-center">
                Review Submission
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </main>


</body>
</html>
